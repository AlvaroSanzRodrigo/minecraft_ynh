{
    "name": "Minecraft",
    "id": "minecraft",
    "packaging_format": 1,
    "description": {
        "en": "Minecraft package for YunoHost.",
        "fr": "Minecraft pour YunoHost."
    },
    "version": "1.13.2",
    "url": "https://minecraft.net/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Minecraft",
                    "fr": "Choisissez un nom de domaine pour Minecraft"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Minecraft /vs is accepted",
                    "fr": "Choisissez un chemin pour Minecraft /vs est accepté"
                },
                "example": "/mc",
                "default": "/mc"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            },
            {
                "name": "server",
                "type": "server",
                "ask": {
                    "en": "Select your server ?",
                    "fr": "Choisir votre serveur ?"
                },
                "choices": ["vanilla", "paper"],
                "default": "vanilla"
            },
            {
                "name": "ram",
                "type": "ram",
                "ask": {
                    "en": "Set the memory of server ?",
                    "fr": "Définir la mémoire du serveur ? : mettez le chiffre en MB (MegaByte binaire) : soit 2GB = 2048, 4GB = 4096..."
                },
                "example": "1024, 2048, 4096, ...",
                "default": "1024"
            }
        ]
    }
}
